<div class="d-flex full-post-title">
  <div class="d-flex full-post-header">
    <h3>Post No: <%= @post.id %> by <%= @user.name %></h3>
    <h4>Comments: <%= @post.comments_counter %> Likes: <%= @post.likes_counter %></h4>
  </div>
  <div><h2><%= @post.text %></h2></div>
</div>
<ul class="full-comments-wrapper">
  <% if @post.comments.empty?%>
    <h3>No comments yet</h3>
    <%= link_to 'Write a new comment', "/users/#{@user.id}/posts/#{@post.id}/comments/new", class: 'new-comment-btn' %>
    <%= render partial: "/shared/like_post", locals: { post: @post, user: @user } %>
  <% else %>
    <li>
    <%= link_to 'Write a new comment', "/users/#{@user.id}/posts/#{@post.id}/comments/new", class: 'new-comment-btn' %>
    <%= render partial: "/shared/like_post", locals: { post: @post, user: @user } %>
    <h2>Comments:</h2>
    <% @post.comments.each do |comment| %>
      <h4><%= comment.user.name %>: <%= comment.text %></h4>
    <% end %>
    </li>
  <% end %>
</ul>


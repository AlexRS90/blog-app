<ul class="d-flex container">
  <% Array(@users).each do |user| %>   
    <li class="cards-layout d-flex">
      <%= image_tag(user.photo, alt: 'User Image', class: 'photo') %>
      <div class="user-info d-flex">
        <h3><%= user.name %></h3>
        <% if user.post_counter <= 1 %>
          <h4>Post: <%= user.post_counter %></h4>
        <% else %>
          <h4>Posts: <%= user.post_counter %></h4>
        <% end %>
      </div>
      <% if request.fullpath == '/' || request.fullpath == '/users' %>
        <%= link_to 'Profile', "/users/#{user.id}", class: 'profile-btn' %>
      <% end %>
    </li>
  <% end %>
</ul>